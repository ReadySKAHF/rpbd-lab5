@model DeleteEntity

<link rel="stylesheet" href="~/scss/General/deleteModalStyles.min.css" asp-append-version="true" />  

<div class="delete-modal-overlay">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Delete Confirmation</h5>
            <button type="button" onclick="closeModal('@Model.PopUpId')" aria-label="Close" class="close-button">&times;</button>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete this item?</p>
            <p><strong>Item Name:</strong> @Model.ItemName</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" onclick="closeModal('@Model.PopUpId')">Cancel</button>
            <form asp-route="@Model.ControllerInfo.DeleteActionName" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger">Confirm</button>
            </form>
        </div>
    </div>
</div>
